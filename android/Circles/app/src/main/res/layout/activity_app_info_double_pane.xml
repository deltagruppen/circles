<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deltagruppen.circles.PiInfo"
    android:id="@+id/pi_info_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_field"
            android:background="#ff7e57c2"
            android:id="@+id/app_info_header_field">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_app_name"
                android:textSize="@dimen/font_header_text"
                android:textColor="@color/first_header_text"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/app_info_double_pane_text_view_1" />

        </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_info_header_field"
        android:layout_margin="@dimen/activity_margin_big">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/app_info_intro_text_field"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_margin_big">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_perfect_pi_description"
                android:textSize="@dimen/font_size_medium"
                android:id="@+id/app_info_double_pane_text_view_2" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/about_page_width2"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/app_info_intro_text_field">



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/app_info_big_text"
                android:layout_marginBottom="@dimen/activity_margin_big">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_app_head_students"
                        android:textSize="@dimen/font_size_big"
                        android:textColor="@color/third_header_text"
                        android:id="@+id/app_info_double_pane_text_view_3"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_app_head_math_center"
                        android:textSize="@dimen/font_size_big"
                        android:textColor="@color/third_header_text"
                        android:id="@+id/app_info_double_pane_text_view_4"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/app_info_big_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/activity_margin_medium">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/head_project_leader_text_view"
                                android:text="@string/about_app_head_project_leader"
                                android:textSize="@dimen/font_size_small"
                                android:textStyle="bold"
                                android:textColor="@color/third_header_text"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/project_leader_details_text_field"
                                android:text="@string/about_app_project_leader_details"
                                android:textSize="@dimen/font_size_small"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/head_user_testing_text_view"
                                android:text="@string/about_app_head_user_testing"
                                android:textSize="@dimen/font_size_small"
                                android:textStyle="bold"
                                android:textColor="@color/third_header_text"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/name_AE_text_field"
                                android:text="@string/name_AE"
                                android:textSize="@dimen/font_size_small"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/name_AM_text_field"
                                android:text="@string/name_AM"
                                android:textSize="@dimen/font_size_small"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/activity_margin_medium">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/head_design_and_gui_text_view"
                                android:text="@string/about_app_head_guiux"
                                android:textSize="@dimen/font_size_small"
                                android:textStyle="bold"
                                android:textColor="@color/third_header_text"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/info_name_PS_text_view"
                                android:text="@string/name_PS"
                                android:textSize="@dimen/font_size_small"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/head_lead_programmer_text_view"
                                android:text="@string/about_app_head_lead_programmer"
                                android:textSize="@dimen/font_size_small"
                                android:textStyle="bold"
                                android:textColor="@color/third_header_text"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/name_name_MM_text_view"
                                android:text="@string/name_MM"
                                android:textSize="@dimen/font_size_small"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/activity_margin_medium">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/head_programmers_text_view"
                                android:text="@string/about_app_head_programmers"
                                android:textSize="@dimen/font_size_small"
                                android:textStyle="bold"
                                android:textColor="@color/third_header_text"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/name_name_AM_text_view2"
                                android:text="@string/name_AM"
                                android:textSize="@dimen/font_size_small"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/name_AL_text_view"
                                android:text="@string/name_AE"
                                android:textSize="@dimen/font_size_small"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/name_name_AKN_text_view"
                                android:text="@string/name_AKN"
                                android:textSize="@dimen/font_size_small"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/name_name_CEG_text_view"
                                android:text="@string/name_CEG"
                                android:textSize="@dimen/font_size_small"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/name_nameCA_text_view"
                                android:text="@string/name_CA"
                                android:textSize="@dimen/font_size_small"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/name_name_DJ_text_view"
                                android:text="@string/name_DJ"
                                android:textSize="@dimen/font_size_small"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/name_name_JYI_text_view"
                                android:text="@string/name_JYI"
                                android:textSize="@dimen/font_size_small"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_sl_text_field"
                            android:text="@string/name_sl"
                            android:textSize="@dimen/font_size_small"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/contact_sl_text_field"
                            android:text="@string/about_app_contact_sl"
                            android:textSize="@dimen/font_size_small"/>

                        <ImageView
                            android:layout_width="442dp"
                            android:layout_height="174dp"
                            android:id="@+id/imageView2"
                            android:src="@drawable/smc_logo_grey"
                            android:layout_marginBottom="126dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="206dp"
                            android:layout_marginTop="70dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
