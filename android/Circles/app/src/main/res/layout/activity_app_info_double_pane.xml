<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deltagruppen.circles.PiInfo"
    android:id="@+id/pi_info_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_field"
        android:background="#ff7e57c2"
        android:orientation="horizontal"
        android:id="@+id/app_info_header_field">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_app_name"
            android:textSize="@dimen/font_header_text"
            android:textColor="@color/first_header_text"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/app_info_double_pane_text_view_1" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_info_header_field">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/relative_layout_1"
            android:layout_marginStart="@dimen/activity_margin_big"
            android:layout_marginLeft="@dimen/activity_margin_big"
            android:layout_marginEnd="@dimen/activity_margin_big"
            android:layout_marginRight="@dimen/activity_margin_big"
            android:layout_marginBottom="@dimen/activity_margin_big">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_perfect_pi_description"
                android:textSize="@dimen/font_size_medium"
                android:id="@+id/app_info_double_pane_text_view_2"
                android:layout_marginTop="@dimen/activity_margin_big"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/activity_margin_big">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_app_head_students"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/font_size_big"
                        android:textColor="@color/third_header_text"/>

                    </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_app_head_math_center"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/font_size_big"
                        android:textColor="@color/third_header_text"/>

                    </RelativeLayout>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/activity_margin_biggest_still"
                android:layout_marginLeft="@dimen/activity_margin_biggest_still"
                android:layout_marginEnd="@dimen/activity_margin_biggest_still"
                android:layout_marginRight="@dimen/activity_margin_biggest_still">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/activity_margin_big"
                    android:layout_marginLeft="@dimen/activity_margin_big">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/head_project_leader_text_view"
                            android:text="@string/about_app_head_project_leader"
                            android:textSize="@dimen/font_size_small"
                            android:textStyle="bold"
                            android:textColor="@color/third_header_text"
                            android:layout_marginBottom="@dimen/activity_margin_medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/project_leader_details_text_field"
                            android:text="@string/about_app_project_leader_details"
                            android:textSize="@dimen/font_size_small"
                            android:layout_marginBottom="@dimen/activity_margin_medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/head_design_and_gui_text_view"
                            android:text="@string/about_app_head_guiux"
                            android:textSize="@dimen/font_size_small"
                            android:textStyle="bold"
                            android:textColor="@color/third_header_text"
                            android:layout_marginBottom="@dimen/activity_margin_medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/info_name_PS_text_view"
                            android:text="@string/name_PS"
                            android:textSize="@dimen/font_size_small"
                            android:layout_marginBottom="@dimen/activity_margin_medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/head_user_testing_text_view"
                            android:text="@string/about_app_head_user_testing"
                            android:textSize="@dimen/font_size_small"
                            android:textStyle="bold"
                            android:textColor="@color/third_header_text"
                            android:layout_marginBottom="@dimen/activity_margin_medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_AE_text_field"
                            android:text="@string/name_AE"
                            android:textSize="@dimen/font_size_small"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_AM_text_field"
                            android:text="@string/name_AM"
                            android:textSize="@dimen/font_size_small"
                            android:layout_marginBottom="@dimen/activity_margin_medium"/>

                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/head_programmers_text_view"
                            android:text="@string/about_app_head_programmers"
                            android:textSize="@dimen/font_size_small"
                            android:textStyle="bold"
                            android:textColor="@color/third_header_text"
                            android:layout_marginBottom="@dimen/activity_margin_medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_name_AKN_text_view"
                            android:text="@string/name_AKN"
                            android:textSize="@dimen/font_size_small"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_name_CEG_text_view"
                            android:text="@string/name_CEG"
                            android:textSize="@dimen/font_size_small"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_nameCA_text_view"
                            android:text="@string/name_CA"
                            android:textSize="@dimen/font_size_small"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_name_DJ_text_view"
                            android:text="@string/name_DJ"
                            android:textSize="@dimen/font_size_small"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_name_JYI_text_view"
                            android:text="@string/name_JYI"
                            android:textSize="@dimen/font_size_small"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_name_MM_text_view"
                            android:text="@string/name_MM"
                            android:textSize="@dimen/font_size_small"
                            android:layout_marginBottom="@dimen/activity_margin_medium"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/name_sl_text_field"
                        android:text="@string/name_sl"
                        android:textSize="@dimen/font_size_small"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/contact_sl_text_field"
                        android:text="@string/about_app_contact_sl"
                        android:textSize="@dimen/font_size_small"
                        android:layout_gravity="center_horizontal"/>

                    <ImageView
                        android:layout_width="442dp"
                        android:layout_height="174dp"
                        android:id="@+id/imageView2"
                        android:src="@drawable/smc_logo_grey"
                        android:layout_margin="@dimen/activity_margin_big"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

                </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>