<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deltagruppen.circles.PiInfo"
    android:id="@+id/pi_info_layout">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="1200dp"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:baselineAligned="false">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginRight="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calc_pi"
                    android:id="@+id/textView5"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    android:layout_marginBottom="10dp" />



                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pi_intro_calculation"
                    android:id="@+id/textView12"
                    android:layout_below="@+id/textView5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:textSize="20sp" />

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_below="@+id/textView12"
                    android:shrinkColumns="1">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="1)"
                        android:id="@+id/textView23"
                        android:layout_gravity="right"
                        android:textSize="18sp"
                        android:textColor="@color/actionbar_background" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pi_calcultacion_step1_part1"
                        android:id="@+id/textView27"
                        android:paddingLeft="10dp"
                        android:textSize="18sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pi_calcultacion_formula_1"
                            android:id="@+id/textView38"
                            android:paddingLeft="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pi_calcultacion_step1_part2"
                            android:id="@+id/textView39"
                            android:paddingLeft="10dp"
                            android:textSize="18sp" />
                    </LinearLayout>

                </TableRow>

                </TableLayout>
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp">

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/tableLayout">
                    <TableRow
                        android:layout_width="25dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="2)"
                            android:id="@+id/textView28"
                            android:layout_gravity="right"
                            android:textSize="18sp"
                            android:textColor="@color/actionbar_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pi_calcultacion_step2_part1"
                            android:id="@+id/textView31"
                            android:paddingLeft="10dp"
                            android:textSize="18sp" />



                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pi_calcultacion_formula_2"

                            android:paddingLeft="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:textSize="18sp"
                            android:layout_column="1" />



                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pi_calcultacion_step2_part2"

                            android:paddingLeft="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:textSize="18sp"
                            android:layout_column="1" />


                    </TableRow>
                      <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp" >

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="3)"
                        android:id="@+id/textView32"
                        android:layout_gravity="right"
                        android:textSize="18sp"
                        android:textColor="@color/actionbar_background" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pi_calcultacion_step3_part1"
                        android:id="@+id/textView34"
                        android:paddingLeft="10dp"
                        android:textSize="18sp" />
                      </TableRow>
               </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pi_calcultacion_step3_formula1"

                android:paddingLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:layout_below="@+id/tableLayout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="168dp"
                android:layout_marginEnd="168dp"
                android:id="@+id/textView49" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pi_calcultacion_step3_part2"

                android:paddingLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:layout_below="@+id/textView49"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="43dp"
                android:layout_marginStart="43dp"
                android:id="@+id/textView50" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pi_calcultacion_step3_formula2"

                android:paddingLeft="50dp"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:layout_below="@+id/textView50"
                android:layout_alignRight="@+id/textView49"
                android:layout_alignEnd="@+id/textView49" />



        </RelativeLayout>
        </LinearLayout>

        </RelativeLayout>

</RelativeLayout>
